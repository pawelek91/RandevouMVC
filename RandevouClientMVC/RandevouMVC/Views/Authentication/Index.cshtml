@model RandevouMVC.ViewModels.UserLoginViewModel

@{




    if (!string.IsNullOrWhiteSpace(Model.LoggedUser))
    {
        <div>Zalogowano jako @Model.LoggedUser</div>
        <a asp-action="Logout" asp-controller="Authentication" class="btn btn-primary">Wyloguj</a>
    }
    else if (string.IsNullOrWhiteSpace(Model.ApiKey))
    {
        <a asp-action="Register" asp-controller="Authentication" class="btn btn-secondary">Utwórz konto</a>


        <form asp-controller="Authentication" asp-action="Login" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Login" class="form-control" placeholder="Użytkownik">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="Hasło">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Zaloguj</button>
        </form>
    }
}