@model RandevouMVC.ViewModels.UserRegisterViewModel

    <form asp-controller="Authentication" asp-action="Register" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Dto.UserDto.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.UserDto.Name" class="form-control" placeholder="Użytkownik">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Dto.Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.Password" class="form-control" placeholder="Hasło">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Dto.UserDto.DisplayName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.UserDto.DisplayName" class="form-control" placeholder="Wyświetlana nazwa">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Dto.UserDto.BirthDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.UserDto.BirthDate" class="form-control" placeholder="Data urodzin">
            </div>
        </div>

        <div class="form-group row">
            <select asp-for="Gender" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<RandevouMVC.ViewModels.Gender>()"></select>
        </div>

        <button type="submit" class="btn btn-primary">Zarejestruj</button>
    </form>

