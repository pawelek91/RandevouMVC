@model IEnumerable<RandevouMVC.ViewModels.Messages.ConversationViewModel>


    <div class="col-md-6" id="conversationDiv">

        <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
        <script language="javascript" type="text/javascript">
            reloadChat();
            var timeout = setInterval(reloadChat, 2000);
            function reloadChat() {

                $('#conversationDiv').load('/Messages/Conversation/@ViewBag.SpeakerId');
            }
        </script>
    </div>

<div>
    @{
        await Html.RenderPartialAsync("SendMessage",
            new RandevouMVC.ViewModels.Messages.SendMessageViewModel
            {
                SpeakerId = ViewBag.SpeakerId,
            });
    }
</div>