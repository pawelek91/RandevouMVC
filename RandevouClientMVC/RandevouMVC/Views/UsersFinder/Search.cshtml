@model  IEnumerable<RandevouMVC.ViewModels.UsersFinder.UserBasicViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nazwa</th>
            <th scope="col">Płeć</th>
            <th scope="col">Wiek</th>
            <th scope="col">Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
        <tr>
            <td>@user.DisplayName</td>
            <td>@user.Gender</td>
            <td>@user.Age</td>
            <td><a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn-primary">Wyświelt</a></td>
        </tr>
        }
    </tbody>
</table>